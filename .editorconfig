root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
max_line_length = 120

[*.{css,js,json,yml,yaml,toml}]
indent_size = 2

[*.html]
indent_size = 2
insert_final_newline = false
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
